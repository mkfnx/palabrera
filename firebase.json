{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "cleanUrls": true,
    "rewrites": [
      {
        "source": "/conferencias_diarias{,/**}",
        "destination": "/conferencias_diarias.html"
      },
      {
        "source": "/como_funciona/",
        "destination": "/como_funciona.html"
      },
      {
        "source": "/autor/",
        "destination": "/autor.html"
      }
    ]
  }
}
